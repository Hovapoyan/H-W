b=""
for x in range(len(a)-1,-1,-1):
    b+=a[x]
print(b)


//Fibonacii and prime
a=1
b=1
def parz(a):
    t=0
    i=2
    while i*i<=a:
        if a%i==0:
            t+=1
        i+=1
    if t==0 or a<4:
        return True
    else:
        return False
for x in range(45):
    c=a+b
    a,b=b,c
    if parz(c):
        print(c)

//Sieve of Eratosthenes
a=[]
for i in range(1,100):
    a.append(i)
print(a)
for x in a:
    for y in a:
        if y>x and y%x==0:
            a.remove(y)
print(a)

a=[]
for i in range(2,100):
    a.append(i)
def pop_a(q,lista):
    for i in range(2*q,lista[-1],q):
        if i in lista:
            lista.remove(i)
for x in a:
    pop_a(x,a)
print(a)
